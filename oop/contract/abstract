//$mellat->sendRequest();
$gateway = factory::make('mellat');
$gateway-> sendRequest();
class factory{
    public static function make($class)
    {
        $className = ucfirst($class);
        if (!class_exists($className)){
            return false ;
        }
        return new $className;
    }

}